<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:GastosPersonales.ViewModels"
    xmlns:models="clr-namespace:GastosPersonales.Models"
    x:Class="GastosPersonales.Views.MainPage"
    x:DataType="viewmodels:MainViewModel">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <AbsoluteLayout>

        <!-- Contenedor principal con balance y lista -->
        <Grid Padding="20"
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All"
              RowSpacing="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Panel balance -->
            <Frame Grid.Row="0" Padding="15" HasShadow="True" CornerRadius="10" Margin="0,0,0,10">
                <Grid ColumnDefinitions="*,*"
                      RowDefinitions="Auto,Auto,Auto">
                    <Label Text="Balance:" Grid.Column="0" FontSize="20" />
                    <Label Text="{Binding Balance}" Grid.Column="1" FontSize="20" HorizontalTextAlignment="End" />
                    <Label Text="Ingresos:" Grid.Row="1" Grid.Column="0" />
                    <Label Text="{Binding Ingresos}" Grid.Row="1" Grid.Column="1" TextColor="Green" HorizontalTextAlignment="End" />
                    <Label Text="Gastos:" Grid.Row="2" Grid.Column="0" />
                    <Label Text="{Binding Gastos}" Grid.Row="2" Grid.Column="1" TextColor="Red" HorizontalTextAlignment="End" />
                </Grid>
            </Frame>

            <!-- Texto "Transacciones:" -->
            <Label Text="Transacciones:" Grid.Row="1" FontAttributes="Bold" FontSize="18" Margin="0,0,0,5" />

            <!-- Lista de transacciones -->
            <CollectionView Grid.Row="2" ItemsSource="{Binding Transacciones}" VerticalOptions="FillAndExpand">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Transaccion">
                        <Frame BorderColor="LightGray" Margin="0,5" CornerRadius="8" Padding="10">
                            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                                <Label Text="{Binding Descripcion}" 
                                       FontAttributes="Bold" 
                                       TextColor="Black"
                                       VerticalOptions="Center" />
                                <Label Text="{Binding MontoConSigno}" 
                                       TextColor="{Binding ColorMonto}" 
                                       VerticalOptions="Center" />
                                <Label Text="{Binding Fecha, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                       HorizontalOptions="EndAndExpand" 
                                       VerticalOptions="Center" 
                                       FontSize="12" 
                                       TextColor="Gray"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- Botón flotante + -->
        <Button Text="+"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="Purple"
                TextColor="White"
                FontSize="30"
                AbsoluteLayout.LayoutBounds="1,1,60,60"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="OnAgregarClicked" />

    </AbsoluteLayout>
</ContentPage>
